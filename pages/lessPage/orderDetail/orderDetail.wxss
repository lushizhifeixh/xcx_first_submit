/*朦层  */

.index_wrap_layer {
  width: 100%;
  height: 100%;
  background: rgba(31, 45, 61, 0.50);
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
}

.layer_content_order {
  width: 750rpx;
  height: 630rpx;
  background: #fff;
  box-shadow: 0 -1px 10px 0 rgba(31, 45, 61, 0.50);
  position: fixed;
  left: 0;
  bottom: 0;
}

.pick_good_title {
  width: 750rpx;
  height: 88rpx;
  box-sizing: border-box;
  padding: 0 34rpx 0 48rpx;
}

