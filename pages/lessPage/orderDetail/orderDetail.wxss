}

/*  */

.tab_content_container {
  height: 542rpx;
}

.swiper-tab {
  width: 240rpx;
  background: #f0f1f1;
  font-size: 12px;
  color: #1f2d3d;
  text-align: center;
}

.swiper-tab-item {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
}

.on {
  color: #37c65c;
  background: #fff;
  border-bottom: none;
}

.swiper-box {
  display: block;
  width: 450rpx;
  height: 100%;
  overflow: hidden;
  padding-top: 0;
}

.time_quantum {
  text-align: center;
  height: 110rpx;
  margin-top: 21rpx;
  margin-bottom: 12rpx;
  background: #f0f1f1;
  border-radius: 2px;
  box-sizing: border-box;
  padding-left: 40rpx;
  line-height: 110rpx;
}

.time_quantum:active {
  background: rgba(55, 198, 92, 0.10);
}

swiper-item {
  display: block;
  overflow: scroll;
}

/* 朦层出现 */

@keyframes Layerappear {
  from {
    bottom: -630rpx;
  }

  to {
    bottom: 0;
  }
}

.Layertoappear {
  animation: Layerappear 0.3s ease-out;
}

/* 朦层消失 */

@keyframes layerFade {
  from {
    bottom: 630rpx;
  }

  to {
    bottom: -630rpx;
  }
}

.Layertotade {
  animation: layerFade 0.3s ease-out;
}
