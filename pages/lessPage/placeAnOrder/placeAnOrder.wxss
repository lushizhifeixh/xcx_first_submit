.time_quantum_active{
  background: rgba(55,198,92,0.10);
}
swiper-item {
  display: block;
  overflow: scroll;
}
/* 朦层出现 */
@keyframes Layerappear{
  from{
    bottom:-630rpx;
  }
  to{
    bottom:0;
  }
}
.Layertoappear{
  animation: Layerappear 0.3s ease-out;
}
/* 朦层消失 */
@keyframes layerFade{
  from{
    bottom:630rpx;
  }
  to{
    bottom:-630rpx;
  }
}
.Layertotade{
  animation: layerFade 0.3s ease-out;
}
