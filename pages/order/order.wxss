@import "../shopCart/shopCart.wxss"

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
  box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.12);
  padding-left: 0;
  border-bottom: none;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 25%;
  color: #777;
  margin-right: 0;
  margin-bottom: 0;
}

.on {
  color: #37c65c;
  border-bottom: 5rpx solid #37c65c;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding-top: 181rpx;
}

.cart_all_detail {
  height: 1031rpx;
  background: none;
}

.cart_list_numRepat {
  width: 170rpx;
  height: 28rpx;
  border: none;
  text-align: center;
  overflow-y: hidden;
}

.container_seller_box {
  width: 710rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 6rpx;
  min-height: 435rpx;
  padding-bottom: 0;
}

.seller_box_detail {
  padding-left: 34rpx;
  padding-right: 28rpx;
  box-sizing: border-box;
}

.buyer_remark {
  line-height: 72rpx;
}

.total_price_time {
  height: 126rpx;
}

.order_manage {
  height: 118rpx;
  padding-left: 180rpx;
  box-sizing: border-box;
  padding-top: 26rpx;
}

.order_manage_info {
  border: 1px solid #99a9bf;
  border-radius: 100px;
  width: 150rpx;
  line-height: 60rpx;
  display: inline-block;
  text-align: center;
  color: #475669;
  letter-spacing: 0.34px;
}

.order_info_green {
  border: 1px solid #37c65c;
  color: #37c65c;
}

.fixedbox {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9;
}

.cart_empty {
  width: 329rpx;
  margin-left: 210rpx;
}

.store_name_only {
  width: 490rpx;
}

.opration_order {
  width: 200rpx;
  text-align: right;
}

/*朦层  */

/* 朦层出现 */

@keyframes Layerappear {
  from {
    bottom: -330rpx;
  }

  to {
    bottom: 0;
  }
}

.Layertoappear {
  animation: Layerappear 0.2s ease-out;
}

.order_wrap_layer {
  width: 100%;
  height: 100%;
  background: rgba(31, 45, 61, 0.50);
  position: fixed;
  left: 0;
  top: 0;
}

.order_layer_content {
  width: 100%;
  height: 350rpx;
  background: #fff;
  border-radius: 6px 6px 0 0;
  position: absolute;
  bottom: 0;
  box-sizing: border-box;
}

.order_layer_content view {
  line-height: 70rpx;
}

.view_layercont {
  padding: 20px 0 10rpx 0;
}
